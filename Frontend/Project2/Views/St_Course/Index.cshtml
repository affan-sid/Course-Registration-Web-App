@model IEnumerable<Project2.Models.registration>

@{
    ViewBag.Title = "Index";
}

<h2>Registered Courses</h2>
<p>
    @Html.ActionLink("Register New Courses", "Index", "CourseAddDrop")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.stud_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.course_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.section)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.stud_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.section)
            </td>
            <td>
                @Html.ActionLink("Drop Course", "Delete", new { course_id = item.course_id })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Logout", "Logout","St_Course")
</div>
